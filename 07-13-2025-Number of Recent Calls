# Problem:https://leetcode.com/problems/number-of-recent-calls/description/
# Difficulty: Easy


# Time: O(n)
# Space: O(n)








from collections import deque
class RecentCounter(object):

    def __init__(self):
        self.q=deque()
    def ping(self, t):
        self.q.append(t)
        while self.q[0]< t-3000:
            self.q.popleft()
        return len(self.q)

       
  
        """
        :type t: int
        :rtype: int
        """
        


